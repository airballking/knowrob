<?xml version="1.0"?>
<package>
  <name>knowrob_srdl</name>
  <version>0.1.0</version>
  <description>
    Implementation of the Semantic Robot Description Language (SRDL) that
    provides model and reasoning tools to match prerequisites of actions
    to the capabilities of a robot.
  </description>

  <maintainer email="tenorth@cs.uni-bremen.de">Moritz Tenorth</maintainer>

  <author>Moritz Tenorth</author>
  <author>Tobias Roehm</author>
  
  <url type="bugtracker">https://github.com/knowrob/knowrob/issues</url>

  <license>LGPL</license>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>rosjava_build_tools</build_depend>
  
  <build_depend>knowrob_common</build_depend>
  <build_depend>urdf</build_depend>
  <build_depend>xacro</build_depend>

  <run_depend>knowrob_common</run_depend>
  <run_depend>urdf</run_depend>
  <run_depend>xacro</run_depend>

</package>
